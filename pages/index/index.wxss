/**index.wxss**/
.flexRow {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flexCol {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.beginOrderActive {
  opacity: 0.85;
}
.heard {
  width: 100%;
  position: relative;
}
.heard .leftBox {
  position: fixed;
  z-index: 101;
  left: 0rpx;
  top: 0;
  height: 85rpx;
  background: #fff;
  justify-content: flex-start;
  padding-left: 2.5%;
  box-sizing: border-box;
}
.heard .leftBox .userAvatarBox {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 4rpx 0rpx #DAE4EE;
}
.heard .leftBox .userAvatarBox .avatarBox {
  height: 52rpx;
  width: 52rpx;
  border-radius: 50%;
  overflow: hidden;
}
.heard .leftBox .userAvatarBox .avatarBox .userAvatar {
  width: 100%;
  height: 100%;
}
.heard .leftBox .line {
  width: 2rpx;
  height: 32rpx;
  background: #999;
  margin-left: 24rpx;
}
.heard .titleStyle {
  font-size: 28px;
}
.heard .vantTabs {
  width: 100vw;
  box-sizing: border-box;
}
.heard .vantTabs .van-tabs__wrap {
  height: 88rpx;
  background: #ffffff;
}
.heard .vantTabs scroll-view {
  padding-right: 2.5%;
}
.heard .vantTabs .van-tab {
  font-size: 28rpx;
  color: #999999;
}
.heard .vantTabs .van-tab--active {
  color: #151515;
}
.heard .vantTabs .van-tabs__line {
  background-color: transparent;
}
.heard .activeStyle {
  font-weight: bold;
}
.heard .location {
  position: fixed;
  bottom: 72rpx;
  left: 30rpx;
  width: 84rpx;
  height: 84rpx;
  background: #FFFFFF;
  border-radius: 45rpx;
}
.heard .location .coverImage {
  width: 48rpx;
  height: 48rpx;
}
.heard .beginOrder {
  position: fixed;
  bottom: 70rpx;
  left: 50%;
  margin-left: -200rpx;
  width: 400rpx;
  height: 88rpx;
  background: #457CFB;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.heard .service {
  position: fixed;
  bottom: 72rpx;
  right: 30rpx;
  width: 84rpx;
  height: 84rpx;
  background: #FFFFFF;
  border-radius: 45rpx;
}
.heard .service .serviceImage {
  width: 48rpx;
  height: 48rpx;
}
.heard .pickUp {
  width: 100%;
  min-height: calc(100vh - 88rpx);
  background: linear-gradient(348deg, rgba(224, 226, 255, 0.08) 20%, #70B6FF 100%);
}
.heard .pickUp .titleTop {
  justify-content: space-between;
  padding: 20rpx 66rpx 26rpx;
  box-sizing: border-box;
}
.heard .pickUp .titleTop .left {
  align-items: flex-start;
}
.heard .pickUp .titleTop .left .title {
  font-size: 36rpx;
  font-family: AliHYAiHei;
  color: #FFFFFF;
}
.heard .pickUp .titleTop .left .subhead {
  font-size: 16rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  letter-spacing: 12rpx;
}
.heard .pickUp .titleTop .right .text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.heard .pickUp .titleTop .right .num {
  padding: 1rpx 8rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  background: #457CFB;
  margin-right: 6rpx;
}
.heard .pickUp .content {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.heard .pickUp .content .listBox {
  width: 100%;
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 26rpx;
}
.heard .pickUp .content .listBox .titleBox {
  width: 100%;
  height: 120rpx;
  justify-content: space-between;
  padding: 0 36rpx;
  box-sizing: border-box;
}
.heard .pickUp .content .listBox .titleBox .leftText {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.heard .pickUp .content .listBox .titleBox .rightText {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #AAAAAA;
}
.heard .pickUp .bottomText {
  position: fixed;
  left: 50%;
  bottom: 50rpx;
  transform: translateX(-50%);
  font-size: 16rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #457CFB;
  letter-spacing: 12rpx;
}
.heard .pickUp .seach .van-search__content {
  background-color: #fff;
  border: 2rpx solid #EFF0FF;
}
.heard .pickUp .seach .van-search__content .van-icon {
  font-weight: bold;
}
.heard .pickUp .gridClass text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #151515;
  margin-top: 8rpx;
}
.heard .pickUp .imgBox {
  width: 80rpx;
  height: 80rpx;
}
.heard .fixedIndexImage {
  position: fixed;
  z-index: 101;
  top: 88rpx;
  left: 50%;
  transform: translateX(-50%);
}
.heard .fixedIndexImage .image {
  width: 690rpx;
  height: 134rpx;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  box-shadow: 0rpx 8rpx 16rpx -4rpx #C2BFBB;
}
.heard .fixedIndexImage .imageList {
  width: 690rpx;
  height: 134rpx;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  padding: 30rpx 24rpx 26rpx 28rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  justify-content: space-between;
  box-shadow: 0rpx 8rpx 16rpx -4rpx #C2BFBB;
}
.heard .fixedIndexImage .imageList .backGroundImg {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.heard .fixedIndexImage .imageList .left {
  align-items: flex-start;
}
.heard .fixedIndexImage .imageList .left .title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.heard .fixedIndexImage .imageList .left .title .tag {
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  padding: 2rpx 8rpx;
  box-sizing: border-box;
  background: #00CB8B;
  border-radius: 2rpx;
  margin-left: 6rpx;
}
.heard .fixedIndexImage .imageList .left .status {
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #707070;
  margin-top: 10rpx;
}
.heard .fixedIndexImage .imageList .left .status .time {
  color: #FF6C00;
}
.heard .fixedIndexImage .imageList .right {
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #AAAAAA;
}
.heard .fixedIndexImage .imageList .van-icon {
  margin-left: 4rpx;
}
