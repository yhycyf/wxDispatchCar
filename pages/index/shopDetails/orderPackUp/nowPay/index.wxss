/**index.wxss**/
.nowPay {
  background: #F6F7F9;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  padding-bottom: 200rpx;
}
.nowPay .detailsBox {
  width: 100%;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0px rgba(202, 204, 211, 0.66);
  border-radius: 8rpx;
}
.nowPay .detailsBox .detailTop .labelClassBox {
  justify-content: flex-start;
}
.nowPay .detailsBox .detailTop .labelClassBox .titleTag {
  margin-left: 18rpx;
}
.nowPay .detailsBox .detailTop .valueClass {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #777777;
}
.nowPay .detailsBox .detailTop .title {
  justify-content: flex-start;
}
.nowPay .detailsBox .detailTop .title .van-cell-text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #212121;
}
.nowPay .detailsBox .detailTop .title .van-tag {
  padding: 2rpx 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 8rpx;
}
.nowPay .detailsBox .detailTop .titleClass {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #444444;
}
.nowPay .detailsBox .detailTop .labelClass {
  font-size: 32rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #333333;
}
.nowPay .detailsBox .detailTop .small {
  font-size: 28rpx;
}
.nowPay .detailsBox .detailTop .list {
  width: 100%;
}
.nowPay .detailsBox .detailTop .list .leftChild {
  width: 55%;
}
.nowPay .detailsBox .detailTop .list .leftChild .van-cell {
  padding-right: 0;
}
.nowPay .detailsBox .detailTop .list .rightChild {
  width: 45%;
}
.nowPay .detailsBox .detailTop .list .rightChild .van-cell {
  padding-right: 0;
}
.nowPay .detailsBox .detailTop .content {
  position: relative;
}
.nowPay .detailsBox .detailTop .content .titleClass {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #444444;
}
.nowPay .detailsBox .detailTop .content .labelClass {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.nowPay .detailsBox .detailTop .content::after {
  content: "";
  width: 620rpx;
  height: 2rpx;
  background: #EFEFEF;
  position: absolute;
  top: 0;
  left: 36rpx;
}
.nowPay .detailsStatus {
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(202, 204, 211, 0.66);
  border-radius: 8rpx;
  margin-top: 28rpx;
  overflow: hidden;
}
.nowPay .detailsStatus .valueClass {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: #151515;
  font-weight: bold;
}
.nowPay .detailsStatus .red {
  font-size: 28rpx;
  font-weight: 600;
  color: #E82121;
}
.nowPay .detailsStatus .cellTitle {
  justify-content: flex-start;
}
.nowPay .detailsStatus .cellTitle .tag {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E82121;
  margin-left: 16rpx;
}
.nowPay .detailsStatus .totalBox {
  width: 100%;
  justify-content: flex-end;
  padding-right: 64rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #151515;
  margin-bottom: 26rpx;
}
.nowPay .detailsStatus .totalBox .num {
  margin-left: 42rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #E82121;
}
.nowPay .bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 8rpx 0rpx rgba(79, 82, 84, 0.66);
  padding: 0rpx 31rpx 60rpx 66rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: flex-end;
}
.nowPay .bottom .price {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.nowPay .bottom .price text {
  color: #E82121;
  font-size: 28rpx;
}
.nowPay .bottom .price .red {
  font-size: 48rpx;
  color: #E82121;
}
.nowPay .bottom .btn {
  width: 254rpx;
  height: 86rpx;
  background: #457CFB;
  border-radius: 60rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.nowPay .bottom .btn {
  margin-left: 16rpx;
}
.nowPay .unfold {
  width: 100%;
  margin: 36rpx 0 20rpx;
}
.nowPay .unfold .text {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.nowPay .unfold .icon {
  margin-left: 4rpx;
}
