/**index.wxss**/
.nowPay {
  background: #F6F7F9;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  padding-bottom: 200rpx;
}
.nowPay .detailsBox {
  width: 100%;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0px rgba(202, 204, 211, 0.66);
  border-radius: 8rpx;
}
.nowPay .detailsBox .detailTop .valueClass {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #777777;
}
.nowPay .detailsBox .detailTop .labelClassBox {
  justify-content: flex-start;
}
.nowPay .detailsBox .detailTop .labelClassBox .labelClass {
  font-size: 32rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #333333;
}
.nowPay .detailsBox .detailTop .labelClassBox van-tag {
  line-height: 1;
  margin-top: -4rpx;
}
.nowPay .detailsBox .detailTop .labelClassBox .titleTag {
  font-size: 20rpx;
  margin-left: 18rpx;
}
.nowPay .detailsBox .detailTop .valueClass {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #777777;
}
.nowPay .detailsBox .detailTop .title {
  justify-content: flex-start;
}
.nowPay .detailsBox .detailTop .title .van-cell-text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #212121;
}
.nowPay .detailsBox .detailTop .title .van-tag {
  padding: 2rpx 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 8rpx;
}
.nowPay .detailsBox .detailTop .titleClass {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #212121;
}
.nowPay .detailsBox .detailTop .smallTitle {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #444444;
}
.nowPay .detailsBox .detailTop .smallLabel {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.nowPay .detailsBox .detailTop .selectLabel {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.nowPay .detailsBox .detailTop .small {
  font-size: 32rpx;
}
.nowPay .detailsBox .detailTop .list {
  width: 100%;
  justify-content: space-between;
}
.nowPay .detailsBox .detailTop .list .rightChild {
  width: 30%;
}
.nowPay .detailsBox .detailTop .content {
  width: 100%;
  justify-content: space-between;
  position: relative;
}
.nowPay .detailsBox .detailTop .content .titleClass {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #444444;
}
.nowPay .detailsBox .detailTop .content .labelClass {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.nowPay .detailsBox .detailTop .content::after {
  content: "";
  width: 620rpx;
  height: 2rpx;
  background: #EFEFEF;
  position: absolute;
  top: 0;
  left: 36rpx;
}
.nowPay .detailsStatus {
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(202, 204, 211, 0.66);
  border-radius: 8rpx;
  margin-top: 28rpx;
  overflow: hidden;
}
.nowPay .detailsStatus .title {
  justify-content: flex-start;
}
.nowPay .detailsStatus .title .timeStatus {
  width: 38rpx;
  height: 38rpx;
}
.nowPay .detailsStatus .van-cell-text {
  margin-left: 10rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #212121;
}
.nowPay .detailsStatus .listBox .title .timeStatus {
  width: 44rpx;
  height: 44rpx;
}
.nowPay .detailsStatus .listBox .title .listTitle {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-left: -10rpx;
}
.nowPay .detailsStatus .listBox .label {
  padding-left: 12rpx;
}
.nowPay .detailsStatus .listBox .label .listLabel {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #777777;
  padding-left: 22rpx;
  box-sizing: border-box;
}
.nowPay .detailsStatus .listBox .label .labelStep {
  width: 100%;
  align-items: flex-start;
  padding-left: 20rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  border-left: 1rpx dashed #DDDEE3;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
}
.nowPay .detailsStatus .listBox .label .labelStep .list {
  width: 100%;
  justify-content: space-between;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .left {
  align-items: flex-start;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #777777;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .left text {
  color: #EC0000;
  margin-left: 4rpx;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .left .carName .plateNumber {
  padding: 2rpx 4rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #88C3FF 100%);
  border-radius: 4rpx;
  border: 2rpx solid #D8E8F9;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #151515;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .left .carName .name {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  margin-left: 8rpx;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .left .driver {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #777777;
  margin-top: 20rpx;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .right .phone {
  width: 152rpx;
  height: 48rpx;
  border-radius: 4rpx;
  border: 2rpx solid #E3E3E3;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .right .phone text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #343434;
  margin-left: 6rpx;
}
.nowPay .detailsStatus .listBox .label .labelStep .list .right .carImg {
  width: 218rpx;
  height: 130rpx;
}
.nowPay .detailsStatus .listBox .label .labelStep .list:nth-of-type(2) {
  margin-top: 20rpx;
}
.nowPay .detailsStatus .listBox .label .noPadding {
  padding-top: 0;
  padding-bottom: 0;
}
.nowPay .detailsStatus .listBox .label .noBorder {
  border-left: none;
}
.nowPay .detailsStatus .complete .listTitle {
  color: #AAAAAA !important;
}
.nowPay .detailsStatus .complete .left {
  color: #AAAAAA !important;
}
.nowPay .detailsStatus .complete .left text {
  color: #AAAAAA !important;
}
.nowPay .detailsStatus .paddingBottom {
  padding-top: 0;
  padding-bottom: 0;
}
.nowPay .bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 8rpx 0rpx rgba(79, 82, 84, 0.66);
  padding: 0rpx 31rpx 60rpx;
  box-sizing: border-box;
  justify-content: flex-end;
  align-items: flex-end;
}
.nowPay .bottom .btn {
  padding: 16rpx 40rpx;
  border-radius: 38rpx;
  border: 3rpx solid #777777;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #777777;
}
.nowPay .bottom .btn {
  margin-left: 16rpx;
}
.nowPay .unfold {
  width: 100%;
  margin: 36rpx 0 20rpx;
}
.nowPay .unfold .text {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.nowPay .unfold .icon {
  margin-left: 4rpx;
}
